.nav-body {
  box-sizing: border-box;
  z-index:900;
  /* background-color:#999; */
}

.nav-body .menu-icon{
  display: block;
  box-sizing: border-box;
  position: fixed;
  z-index: 900;
  /* border: 1px solid red; */
}

.nav-body .menu-icon.left{

}

.nav-body .menu-icon.right{

}

.nav-body .nav-menu {
  display: flex;
  flex-direction: row;
  position: absolute;
  background-color: #fff;
  border: 1px solid #eee;
  overflow: hidden;
  opacity: 0.6;
  /* border: 1px solid blue; */
  /* border-radius: 1px; */
}

.nav-body .nav-menu .nav-menu-separator{
  width: 1px;
  background-color: #eee;
}

.nav-body .nav-menu .nav-menu-item {
  position: relative;
  /* border: 1px solid red; */
}

.nav-body .nav-menu .nav-menu-item image {
  display: block;
  margin: 0 auto;
  box-sizing: border-box;
  /* border: 1px solid red; */
}

.nav-body .nav-title{
  min-width: 0px;
  margin: 0 auto;
  text-align: center;
  font-weight: bold;
  /* border: 1px solid red; */
}