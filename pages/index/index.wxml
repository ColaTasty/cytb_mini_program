<block wx:if="{{pageName=='index'}}">
    <view>欢迎来到城院贴吧小助手！</view>
</block>
<block wx:if="{{pageName=='messages'}}">
    <view>消息记录</view>
</block>
<block wx:if="{{pageName=='profile'}}">
    <view>我的信息</view>
</block>
<!-- tarbar -->
<view class="cu-bar tabbar bg-black shadow foot">
    <view class="action {{pageName=='index'?'text-green':'text-gray'}}" data-cur="index" bindtap="TabChange">
        <view class="cuIcon-homefill">
            <view class="cu-tag badge" wx:if="{{showRedDot.index}}"></view>
        </view>
        首页
    </view>
    <view class="action {{pageName=='messages'?'text-green':'text-gray'}}" data-cur="messages" bindtap="TabChange">
        <view class="cuIcon-commentfill">
            <view class="cu-tag badge" wx:if="{{showRedDot.messages}}"></view>
        </view>
        消息
    </view>
    <view class="action {{pageName=='profile'?'text-green':'text-gray'}}" data-cur="profile" bindtap="TabChange">
        <view class="cuIcon-my">
            <view class="cu-tag badge" wx:if="{{showRedDot.profile}}"></view>
        </view>
        我的
    </view>
</view>